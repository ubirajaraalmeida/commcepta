var dir_foto = "assets/img/team/";

function carrega_cartao(id){
  //console.log(document.getElementById("foto_principal").getAttribute("src"));
  document.getElementById("foto_principal").setAttribute("src", (dir_foto + lista_time[id-1]["foto"]));
  document.getElementById("nome_principal").innerHTML = lista_time[id-1]["nome"];
  document.getElementById("ocupacao_principal").innerHTML = lista_time[id-1]["cargo"];
  document.getElementById("idade_principal").innerHTML = lista_time[id-1]["idade"];
  return false;
}

